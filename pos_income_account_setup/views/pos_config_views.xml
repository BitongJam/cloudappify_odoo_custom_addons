<odoo>
    <data>
        <record id="view_pos_config_form" model="ir.ui.view">
            <field name="name">pos.config.form.inherit.income.account</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='other_devices']" position="after">
                    <div id="income_account_id" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="income_account_id"/>
                            <field name="income_account_id" required="1"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>