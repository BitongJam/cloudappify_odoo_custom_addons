<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_bank_book_wizard" model="ir.ui.view">
        <field name="name">account.general.ledger.wizard.form</field>
        <field name="model">account.general.ledger</field>
        <field name="arch" type="xml">
            <form string="General Ledger Report" create="false" edit="true">
                <field name="company_id" invisible="1"/>
                <group>
                    <group>
                        <field name="titles" invisible="1"/>
                        <field name="date_range" />
                        <field name="target_move"/>
                        <field name="display_account"/>
                        <field name="date_from" attrs="{'invisible':[('date_range','!=',False)]}"/>
                        <field name="date_to" attrs="{'invisible':[('date_range','!=',False)]}"/>
                    </group>

                    <group>
                        <field name="journal_ids" widget="many2many_tags"/>
                        <field name="account_ids" widget="many2many_tags"/>
                        <field name="account_tag_ids" widget="many2many_tags"/>
                        <field name="analytic_ids" widget="many2many_tags"/>
                    </group>
                </group>

                <footer>
                    <button string="View" type="object"
                            name="generate_gl" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bank_book_wizard" model="ir.actions.act_window">
        <field name="name">General Ledger</field>
        <field name="res_model">account.general.ledger</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_bank_book_wizard"/>
    </record>

    <!-- Optional Menu -->
    <menuitem id="menu_bank_book_wizard"
              name="General Ledger"
              parent="dyanmic_wizard_report_menu"
              action="action_bank_book_wizard"
    />


    <record id="view_bank_book_cb_wizard" model="ir.ui.view">
        <field name="name">account.general.ledger.cb.wizard.form</field>
        <field name="model">account.general.ledger</field>
        <field name="arch" type="xml">
            <form string="Bank Book Report" create="false" edit="true">
                <field name="company_id" invisible="1"/>
                <group>
                    <group>
                        <field name="titles" invisible="1"/>
                        <field name="date_range" />
                        <field name="target_move"/>
                        <field name="display_account"/>
                        <field name="date_from" attrs="{'invisible':[('date_range','!=',False)]}"/>
                        <field name="date_to" attrs="{'invisible':[('date_range','!=',False)]}"/>
                    </group>

                    <group>
                        <!-- <field name="journal_ids" widget="many2many_tags"/> -->
                        <field name="account_ids" widget="many2many_tags"/>
                        <field name="account_tag_ids" widget="many2many_tags"/>
                        <field name="analytic_ids" widget="many2many_tags"/>
                    </group>
                </group>

                <footer>
                    <button string="View" type="object"
                            name="generate_bb" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bank_book_cb_wizard" model="ir.actions.act_window">
        <field name="name">Bank Book</field>
        <field name="res_model">account.general.ledger</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_bank_book_cb_wizard"/>
    </record>

    <!-- Optional Menu -->
    <menuitem id="menu_bank_book_cb_wizard"
              name="Bank Book"
              parent="dyanmic_wizard_report_menu"
              action="action_bank_book_cb_wizard"
    />

</odoo>
