<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>


        <record id="wiz_dynamic_account_general_ledger_view_form" model="ir.ui.view">
            <field name="name">wiz.account.general.ledger.view.form</field>
            <field name="model">account.general.ledger</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="account_ids" widget="many2many_tags"/>
                                <field name="account_tag_ids" widget="many2many_tags"/>
                                <field name="analytic_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="date_from" />
                                <field name="date_to" />
                            </group>


                        </group>
                    </sheet>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                        <button string="Generate Report" type="object" name="open_report" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_account_general_ledger_action" model="ir.actions.act_window">
            <field name="name">Wizard Account General Ledger</field>
            <field name="res_model">account.general.ledger</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>


</odoo>
