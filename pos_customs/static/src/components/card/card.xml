<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.Card" owl="1">
        <div class="col-lg m-0 p-0">
            <div class="shadow-sm border m-2 p-4 bg-white text-center">
                <div class="h1 fw-bold text-dark" style="font-size: 48px"><span t-esc="props.name"/></div>
                <!-- <div class="h3 text-muted"><span t-esc="props.name"/></div> -->
                <div class="h3 mt-5">
                    <span t-esc="props.currency_symbol"/><span t-esc="props.value"/>
                   
                </div>
            </div>
        </div>

    </t>
   
</templates>